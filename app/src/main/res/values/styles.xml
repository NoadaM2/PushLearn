<resources>

    <!-- Base application theme. -->
    <!-- Light/Day Mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/white_gray</item>
        <item name="tintcolor">@color/gray</item>
        <item name="whitecolor">@color/white</item>
        <item name="blackcolor">@color/black</item>
        <item name="redcolor">@color/red</item>
        <item name="selectedItemColor">@color/light_gray</item>
        <item name="focusColor">@color/white</item>
        <item name="actionColor">@color/colorPrimary</item>
        <item name="actionColorDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Dark/Night Mode theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1D1D1D</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#121212</item>
        <item name="tintcolor">@color/gray</item>
        <item name="whitecolor">@color/black</item>
        <item name="blackcolor">@color/white</item>
        <item name="redcolor">@color/tomato</item>
        <item name="actionColor">@color/white</item>
        <item name="actionColorDark">@color/white</item>
        <item name="selectedItemColor">#2D2D2D</item>
        <item name="focusColor">#2D2D2D</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.DropDownList</item>
    </style>

    <style name="AppTheme.DropDownList" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">?attr/selectedItemColor</item>
        <item name="android:textColor">?attr/blackcolor</item>
    </style>

    <style name="CounterTextLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">?attr/blackcolor</item>
    </style>

</resources>
