<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_card_question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_question"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        />

    <EditText
        android:id="@+id/dialog_card_question_edit_text"
        android:inputType="text|textCapSentences|textAutoCorrect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/question"
        android:lines="1"
        android:fontFamily="@font/open_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/dialog_card_question_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/dialog_card_answer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_answer"
        app:layout_constraintTop_toBottomOf="@id/dialog_card_question_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        />

    <EditText
        android:id="@+id/dialog_card_answer_edit_text"
        android:inputType="text|textCapSentences|textAutoCorrect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/answer"
        android:lines="1"
        android:fontFamily="@font/open_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/dialog_card_answer_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        />

    <SeekBar
        android:id="@+id/dialog_card_iterating_times_horizontal_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:max="10"
        android:thumb="@drawable/ic_notifications_primary_dark_24dp"
        android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
        android:progress="1"
        app:layout_constraintTop_toBottomOf="@id/dialog_card_answer_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />


</android.support.constraint.ConstraintLayout>