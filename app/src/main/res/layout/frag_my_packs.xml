<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
            android:id="@+id/my_packs_toolbar"
            layout="@layout/add_options_toolbar" />

    <TextView
        android:id="@+id/no_items_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/blackcolor"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
            android:visibility="gone"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_packs_toolbar"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pack_list_recyclerview"
        android:layout_width="match_parent"
            android:background="?attr/backgroundcolor"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_packs_toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>